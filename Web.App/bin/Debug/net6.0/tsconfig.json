{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "wwwroot/scripts",
    "rootDirs": [ "Features/*" ],
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [ "Features/*" ]
    },
    "lib": [ "esnext", "dom", "dom.iterable", "scripthost" ],
    "skipLibCheck": false,
    "removeComments": true,
    "inlineSourceMap": true,
    "types": [ "jquery", "lodash", "moment", "numbro", "gss-art-common-lib" ],
    "typeRoots": [ "Features/Typings/*.d.ts" ]
  },
  "include": [
    "Features/**/*",
    "Features/**/*.vue",
    "Features/**/*.ts"
  ],
  "exclude": [ "node_modules" ],
  "compileOnSave": true
}